{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
        "jsx": true
    }
  },

  "env": {
      "browser": true,
      "node": true,
      "commonjs": true,
      "es6": true
  },

  "rules": {
    "indent": [2, 4, {"SwitchCase": 1}],
    "no-console": 1,
    "no-var": 1,
    "no-unused-vars": 1
  },

  "plugins": [
    "react"
  ],

  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ]
}
